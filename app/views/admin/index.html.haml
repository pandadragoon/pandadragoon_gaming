.container.admin-panel
  .title.text-center
    %h1
      Administration Panel
    %button.btn.btn-warning.logout-btn
      = link_to "Log Out", logout_path, method: 'delete'
  .posts-form.row
    = bootstrap_form_for @post, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6", html: {id: "posts-form"} do |f|
      %h2.col-sm-offset-2 Add Blog Posts
      = f.text_field :title
      = f.collection_radio_buttons :category_id, Category.all, :id, :name
      = f.text_field :tagline
      = f.text_area :description
      = f.text_area :body, rows: 20
      = f.text_field :banner_lg, placeholder: "600x150 picture size"
      = f.text_field :banner_sm, placeholder: "300x250 picture size"
      %fieldset.actions.control-group.col-sm-offset-2
        .controls
          %input(type="submit" value="Add Blog Post" class="btn btn-danger")
